{
  "manifest_version": 3,
  "name": "HackerRank to GitHub",
  "version": "1.1",
  "description": "Push HackerRank submissions to GitHub using correct file extension and problem name.",
  "permissions": ["scripting", "tabs", "storage"],
  "host_permissions": ["https://www.hackerrank.com/*"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Export to GitHub"
  },
  "content_scripts": [{
    "matches": ["https://www.hackerrank.com/*"],
    "js": ["content.js"]
  }]
}